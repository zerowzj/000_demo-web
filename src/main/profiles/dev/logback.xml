<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!--项目名称，用于log名的前缀-->
	<property name="PROJECT_NAME" value="job-web" />
	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
	<property name="LOG_HOME" value="/xdfapp/logs/${PROJECT_NAME}" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoder 默认配置为PatternLayoutEncoder -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %class:%line [%thread] [%X{id}] %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/web-debug.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %class:%line [%thread] [%X{id}] %msg%n</pattern>
		</encoder>
		<!-- 只输出level级别以上的日志 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<!--日志按天备份-->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/web-sql.log.%d{yyyy-MM-dd}</fileNamePattern>
			<!--日志文件保留天数-->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
	</appender>

	<appender name="INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/web-info.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %class:%line [%thread] [%X{id}] %msg%n</pattern>
		</encoder>
		<!-- 只输出level级别以上的日志 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>info</level>
		</filter>
		<!--日志按天备份-->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/web-info.log.%d{yyyy-MM-dd}</fileNamePattern>
			<!--日志文件保留天数-->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
	</appender>

	<appender name="ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${LOG_HOME}/web-error.log</File>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %level %class:%line [%thread] [%X{id}] %msg%n</pattern>
		</encoder>
		<!-- 只输出level级别以上的日志 -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>warn</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY </onMismatch>
		</filter>
		<!--日志按天备份-->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/web-error.log.%d{yyyy-MM-dd}</fileNamePattern>
			<!--日志文件保留天数-->
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
	</appender>

	<logger name="org.springframework" level="INFO"/>
	<logger name="org.springframework.aop" level="WARN"/>

	<logger name="org.apache.httpclient.wire" level="WARN"/>
	<logger name="org.apache.commons.httpclient" level="INFO"/>
	<logger name="org.apache.zookeeper" level="INFO"/>
	<logger name="org.eclipse.jetty" level="INFO" />
	<logger name="org.apache.http" level="WARN"/>
	<logger name="org.apache.velocity" level="WARN"/>
	<logger name="org.mybatis.spring" level="WARN" />
	<logger name="org.mybatis" level="WARN" />
	<logger name="org.apache.ibatis" level="WARN" />
	<logger name="com.github.miemiedev" level="WARN" />
	<logger name="org.hibernate" level="WARN" />


	<logger name="org.eclipse.jetty" level="INFO" />
	<logger name="com.alibaba.dubbo" level="WARN"/>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DEBUG" />
		<appender-ref ref="INFO" />
		<appender-ref ref="ERROR" />
	</root>
</configuration>